[include]
    path = ~/.gitprofile
    path = ~/.gitaliases
[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
[core]
	pager = diff-so-fancy | less --tabs=4 -RFX
[diff-so-fancy]
	first-run = false
	stripLeadingSymbols = true
