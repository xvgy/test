# Battery

[batterybar]
command=~/.config/i3/i3blocks/batterybar #run batterybar -h for options
label=⚡
interval=30
markup=pango
min_width=bat: ■■■■■

# Wifi

[wifi]
command=~/.config/i3/i3blocks/wifi
label=[W]
interval=10

# Pomodoro

[pomodoro]
command=python3 ~/.config/i3/i3blocks/i3-pomodoro/pomodoro.py
interval=1

# Tablet

[tablet]
command=~/.config/i3/i3blocks/wacom
interval=1
separator=true

# Date Time
#
[time]
#command=date '+%Y-%m-%d %H:%M:%S'
command=date '+%A %d %b %y | %H:%M:%S'
interval=1
